<?php

module_load_include('module', 'oerp_stock');

function oerp_stock_schema() {
  $schema = array();

  $schema['oerp_stock_track'] = array(
    'fields' => array(
      'id' => array(
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'state' => array(
        'type' => 'varchar',
        'length' => 16,
        'not null' => TRUE,
      ),
      'default_code' => array(
        'type' => 'varchar',
        'length' => 16,
        'not null' => TRUE,
      ),
      'qty_available' => array(
        'type' => 'int',
        'not null' => TRUE,
      ),
      'date' => array(
        'type' => 'char',
        'length' => 10,
      )
    ),
    'primary key' => array('id'),
  );
  return $schema;
}

function oerp_stock_install()
{
  $insts = array(
    "Tree\\Picking",
    "Form\\Picking",
    "Tree\\Inventory",
  );

  $Inst = new \Gulei\Installer\Serial($insts, "Oerp\\Stock\\Installer\\");
  $Inst->exe();

  drupal_install_schema('oerp_stock');
}

function oerp_stock_uninstall(){
  drupal_uninstall_schema('oerp_stock');
}